<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.alan.hundred.group.SimpleViewGroup
            android:layout_margin="@dimen/margin_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#FF4444"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00ff00"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#ff0000"
                android:gravity="center"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#0000ff"
                android:gravity="center"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />
        </com.example.alan.hundred.group.SimpleViewGroup>

        <View
            android:layout_margin="@dimen/margin_big"
            android:background="@color/color_custom"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <com.example.alan.hundred.group.FlowViewGroup

            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="@dimen/margin_big"
            android:background="@color/lightgray"
            android:id="@+id/vp_flow"
            >

            <TextView
                android:enabled="true"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:background="@drawable/bg_tv_flow"
                android:textColor="@color/black"
                android:text="JAVA"
                android:textSize="@dimen/text_size_normal"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:background="@drawable/bg_tv_flow"
                android:textColor="@color/black"
                android:text="Android"
                android:textSize="@dimen/text_size_normal"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_tv_flow"
                android:padding="5dp"
                android:textColor="@color/black"
                android:text="C"
                android:textSize="@dimen/text_size_normal"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_tv_flow"
                android:padding="5dp"
                android:textColor="@color/black"
                android:text="C#"
                android:textSize="@dimen/text_size_normal"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_tv_flow"
                android:padding="5dp"
                android:textColor="@color/black"
                android:text="JAVA SE"
                android:textSize="@dimen/text_size_normal"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_tv_flow"
                android:padding="5dp"
                android:textColor="@color/black"
                android:text="JAVA EE"
                android:textSize="@dimen/text_size_normal"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_tv_flow"
                android:padding="5dp"
                android:textColor="@color/black"
                android:text="JAVA WEB"
                android:textSize="@dimen/text_size_normal"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView

                android:background="@drawable/bg_tv_flow"
                android:padding="5dp"
                android:textColor="@color/black"
                android:text="IOS"
                android:textSize="@dimen/text_size_normal"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_tv_flow"
                android:padding="5dp"
                android:textColor="@color/black"
                android:text="OC"
                android:textSize="@dimen/text_size_normal"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_tv_flow"
                android:padding="5dp"
                android:textColor="@color/black"
                android:text="PYTHON"
                android:textSize="@dimen/text_size_normal"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.example.alan.hundred.group.FlowViewGroup>

    </LinearLayout>

</ScrollView>

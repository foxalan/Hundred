<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.mydialog.view.VerticalView
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:id="@+id/vt_view"
        android:layout_width="200dp"
        android:layout_height="400dp" >

        <Button
            android:text="Scroller1"
            android:id="@+id/bt_scroller1"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <Button
            android:text="Scroller2"
            android:id="@+id/bt_scroller2"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <Button
            android:text="Scroller3"
            android:id="@+id/bt_scroller3"
            android:layout_width="match_parent"
            android:layout_height="100dp" />


    </com.example.mydialog.view.VerticalView>

    <Button
        android:text="Scroller"
        android:id="@+id/bt_scroller"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>